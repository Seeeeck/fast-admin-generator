package ${pkg}.${moduleName}.controller;

#if(${enableSwagger})
import io.swagger.annotations.ApiOperation;
#end
import org.springframework.beans.factory.annotation.Autowired;
#if(${enableWebSecurity})
import org.springframework.security.access.prepost.PreAuthorize;
#end
import org.springframework.web.bind.annotation.*;
import ${pkg}.${moduleName}.entity.${className}Entity;
import ${pkg}.${moduleName}.service.${className}Service;
import ${pkg}.common.utils.PageUtils;
import ${pkg}.common.utils.R;

import java.util.List;
import java.util.Map;



/**
 *
 * @author $!{author}
 * @email $!{email}
 * @date $!{datetime}
 */
@RestController
@RequestMapping("${moduleName}/${pathName}")
public class ${className}Controller {
    @Autowired
    private ${className}Service ${classname}Service;


#if(${enableSwagger})
    @ApiOperation(value = "queryPage")
#end
#if(${enableWebSecurity})
    @PreAuthorize("hasAnyAuthority('${moduleName}:${pathName}:page','ROLE_ADMIN')")
#end
    @GetMapping("/page")
    public R<PageUtils> page(@RequestParam Map<String, Object> params){
        PageUtils page = ${classname}Service.queryPage(params);
        return R.ok(page);
    }

#if(${enableSwagger})
    @ApiOperation(value = "getById")
#end
#if(${enableWebSecurity})
    @PreAuthorize("hasAnyAuthority('${moduleName}:${pathName}:get','ROLE_ADMIN')")
#end
    @GetMapping("/{${pk.attrname}}")
    public R<${className}Entity> getById(@PathVariable("${pk.attrname}") ${pk.attrType} ${pk.attrname}){
		${className}Entity ${classname} = ${classname}Service.getById(${pk.attrname});
        return R.ok(${classname});
    }

#if(${enableSwagger})
    @ApiOperation(value = "save")
#end
#if(${enableWebSecurity})
    @PreAuthorize("hasAnyAuthority('${moduleName}:${pathName}:save','ROLE_ADMIN')")
#end
    @PostMapping
    public R<?> save(@RequestBody ${className}Entity ${classname}){
		${classname}Service.save(${classname});
        return R.ok();
    }

#if(${enableSwagger})
    @ApiOperation(value = "update")
#end
#if(${enableWebSecurity})
    @PreAuthorize("hasAnyAuthority('${moduleName}:${pathName}:update','ROLE_ADMIN')")
#end
    @PutMapping
    public R<?> update(@RequestBody ${className}Entity ${classname}){
		${classname}Service.updateById(${classname});
        return R.ok();
    }

#if(${enableSwagger})
    @ApiOperation(value = "deleteBatch")
#end
#if(${enableWebSecurity})
    @PreAuthorize("hasAnyAuthority('${moduleName}:${pathName}:delete','ROLE_ADMIN')")
#end
    @DeleteMapping("/batch")
    public R<?> deleteBatch(@RequestParam("${pk.attrname}s") List<${pk.attrType}> ${pk.attrname}s){
		${classname}Service.removeByIds(${pk.attrname}s);
        return R.ok();
    }

}
